<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true, :id => 'signup_username' %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :id => 'signup_email' %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, { :id => 'signup_password' } %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, { :id => 'signup_password_confirmation' } %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
